<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@mipmap/splash"
    tools:ignore="MissingPrefix"
    android:layoutDirection="ltr">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/customTextViewBold"
        android:layout_alignEnd="@+id/customTextViewBold"
        android:layout_alignLeft="@+id/customTextViewBold"
        android:layout_alignRight="@+id/customTextViewBold"
        android:layout_alignStart="@+id/customTextViewBold"
        android:scaleType="fitCenter"
        android:src="@mipmap/shodani" />

    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignEnd="@+id/customTextViewBold"
        android:layout_alignLeft="@+id/customTextViewBold"
        android:layout_alignRight="@+id/customTextViewBold"
        android:layout_alignStart="@+id/customTextViewBold"
        android:layout_centerVertical="true"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="09xxxxxxxxx"
        android:inputType="phone"
        android:maxLength="11"
        fontPath="fonts/IRANSansMedium.ttf"
        android:paddingLeft="@dimen/dp16"
        android:textSize="@dimen/sp15" />

     <Button
        android:id="@+id/et_login"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignEnd="@+id/et_mobile"
        android:layout_alignLeft="@+id/et_mobile"
        android:layout_alignRight="@+id/et_mobile"
        android:layout_alignStart="@+id/et_mobile"
        android:layout_below="@+id/et_mobile"
        android:layout_marginTop="@dimen/dp16"
        android:background="#ffa800"
         fontPath="fonts/IRANSansMedium.ttf"
        android:text="ورود"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/customTextViewBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_mobile"
        android:layout_centerHorizontal="true"
        fontPath="fonts/IRANSansMedium.ttf"
        android:layout_margin="@dimen/dp16"
        android:text="برای ورود شماره موبایل خود را وارد کنید"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp15" />

    <TextView
        android:id="@+id/txt_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:text="ورود به صورت مهمان" />
</RelativeLayout>
