<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nest_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    tools:ignore="MissingPrefix"
    android:visibility="invisible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:layout_weight="1"
        android:gravity="center_horizontal|top"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_vip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp225">

            <TextView
                android:id="@+id/txt_vip"
                fontPath="fonts/IRANSansMedium.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:drawablePadding="@dimen/dp6"
                android:drawableRight="@mipmap/vip"
                android:padding="5dp"
                android:text="پیشنهاد ویژه"
                android:textColor="#d80027"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/hrsv_vip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_below="@+id/txt_vip"
                android:layout_above="@+id/txt_vip_more"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/txt_vip_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بیشتر..."
                fontPath="fonts/IRANSansMedium.ttf"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_newest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp225">

            <TextView
                android:id="@+id/txt_new1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:drawablePadding="@dimen/dp6"
                android:drawableRight="@mipmap/newest"
                android:padding="5dp"
                fontPath="fonts/IRANSansMedium.ttf"
                android:text="جدیدترین ها"
                android:textColor="#d80027"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/hrsv_newest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_new1"
                android:layout_above="@+id/txt_new1_more"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/txt_new1_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بیشتر..."
                fontPath="fonts/IRANSansMedium.ttf"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_attractive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp225">

            <TextView
                android:id="@+id/txt_attract"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:drawablePadding="@dimen/dp6"
                fontPath="fonts/IRANSansMedium.ttf"
                android:drawableRight="@mipmap/attractive"
                android:padding="5dp"
                android:text="جذاب ترین ها"
                android:textColor="#d80027" />

            <LinearLayout
                android:id="@+id/hrsv_attractive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_attract"
                android:layout_above="@+id/txt_attract_more"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/txt_attract_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بیشتر..."
                fontPath="fonts/IRANSansMedium.ttf"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_tagged"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp225">

            <TextView
                android:id="@+id/txt_tagged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:drawablePadding="@dimen/dp6"
                android:drawableRight="@mipmap/marked"
                android:padding="5dp"
                fontPath="fonts/IRANSansMedium.ttf"
                android:text="نشان شده ها"
                android:textColor="#d80027" />

            <LinearLayout
                android:id="@+id/hrsv_tagged"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_tagged"
                android:layout_above="@+id/txt_tagged_more"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/txt_tagged_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بیشتر..."
                fontPath="fonts/IRANSansMedium.ttf"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>



    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
